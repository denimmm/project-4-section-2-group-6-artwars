<Window x:Class="ArtWarsClientWPF.ResultWaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Art Wars - Winner Waiting"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <Viewbox Grid.Row="0">
            <Label Content="Art Wars"
                   FontFamily="Algerian"
                   FontSize="64"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </Viewbox>

        <!-- Message Box -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="20"
                Margin="60"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <TextBlock Text="Waiting for winner to be announced..."
                       FontFamily="Roboto"
                       FontSize="36"
                       TextAlignment="Center"
                       Foreground="Black"
                       TextWrapping="Wrap" />
        </Border>

        <!-- Footer -->
        <Viewbox Grid.Row="2">
            <TextBlock Text="Hang tight, results coming soon!"
                       FontFamily="Roboto"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Foreground="Black" 
                       Margin="20,20,20,20"/>
        </Viewbox>
    </Grid>
</Window>
