<Window x:Class="ArtWarsClientWPF.VotingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtWarsClientWPF"
        mc:Ignorable="d"
        Title="VotingWindow" Height="450" Width="800"
        WindowState = "Maximized"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Button Margin="20,0,0,0" Content="&lt;" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="50" Height="30" FontSize="20" Click="LeftButton_Click"/>
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="Image1" Width="400" Height="300" />
        </Viewbox>
        <Button Margin="0,0,20,0" Content=">" HorizontalAlignment="Right" VerticalAlignment="Center" Width="50" Height="30" FontSize="20" Click="RightButton_Click"/>
        <Button Content="Vote" Height="50" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20" Click="VoteButton_Click" Name="VoteButton"/>
    </Grid>
</Window>
