<Window x:Class="ArtWarsClientWPF.DrawingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtWarsClientWPF"
        mc:Ignorable="d"
        Title="DrawingWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Background="LightGray" Width="100">
            <TextBlock Text="Drawing Tools" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
            <Button Content="Black" Click="Black_Click" Background="Black" Foreground="White" Margin="2"></Button>
            <Button Content="Red" Click="Red_Click" Background="Red" Foreground="White" Margin="2"></Button>
            <Button Content="Blue" Click="Blue_Click" Background="Blue" Foreground="White" Margin="2"></Button>
            <Button Content="Green" Click="Green_Click" Background="Green" Foreground="White" Margin="2"></Button>
            <Button Content="Yellow" Click="Yellow_Click" Background="Yellow" Foreground="Black" Margin="2"></Button>
            <Button Content="Brown" Click="Brown_Click" Background="Brown" Foreground="White" Margin="2"></Button>
            <Button Content="Pink" Click="Pink_Click" Background="Pink" Foreground="White" Margin="2"></Button>
            <Button Content="Purple" Click="Purple_Click" Background="Purple" Foreground="White" Margin="2"></Button>
            <Button Content="Orange" Click="Orange_Click" Background="Orange" Foreground="White" Margin="2"></Button>
            <Button Content="Gray" Click="Gray_Click" Background="Gray" Foreground="White" Margin="2"></Button>
            <Button Content="Draw" Click="Draw_Click" Foreground="Gray" Margin="2"></Button>
            <Button Content="Erase" Click="Erase_Click" Foreground="Gray" Margin="2"></Button>
            <Button Content="Clear" Click="Clear_Click" Foreground="Gray" Margin="2"></Button>
            <!--<Button Content="Submit" Click="Submit_Click" Foreground="Gray" Margin="2"></Button>-->
        </StackPanel>

        <local:DrawingCanvas x:Name="CanvasArea" Background="White" Margin="10,10,105,10"/>


    </Grid>
</Window>
