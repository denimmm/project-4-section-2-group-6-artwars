<Window x:Class="ArtWarsClientWPF.PromptWritingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtWarsClientWPF"
        mc:Ignorable="d"
        Title="PromptWritingWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Enter prompt:" Margin="0,10,0,0" />
            <TextBox x:Name="PromptBox" Width="200" />

            <Button Content="Submit" Width="100" Margin="0,10,0,0"
                    Click="SubmitPromptButton_Click" />

            <TextBlock x:Name="StatusText" Foreground="Red" />
        </StackPanel>
    </Grid>
</Window>
